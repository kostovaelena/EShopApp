@model EShopApp.Domain.AddToShoppingCart

@{ ViewData["Title"] = "Add To Shopping Card";
   Layout = "~/Views/Shared/_Layout.cshtml"; }


<br/>
<br/>
<br/>
<div class="eden" style="color:white; text-align:center">
    <br/>
<h1 style="text-align:center"><i>Додади во кошничка</i></h1>


<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddToShoppingCart" method="post">
            <input type="hidden" asp-for="WineId" />
            <div class="form-group">
                
                <input disabled asp-for="SelectedWine.Vinarija" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>