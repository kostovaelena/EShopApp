@model EShopApp.Domain.Wine

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>


<div class="container">
    <div class="card mb-3" style="max-width: 1080px;border:double; border-color:white; background-color: rgba(254, 188, 198, 0.7); color:white ">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Image" style="width:300px; height:430px; margin-left: 28px; margin-top: 28px;" class="img-fluid rounded" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Vinarija</h5>
                    <p><i>@Model.Zemja | @Model.Godina</i></p>


                </div>
            </div>
       

        <div>
            <form asp-action="Delete" style="margin-left:456px">

                <a asp-controller="Wines" asp-action="Index" asp-route-id="@Model.Id" style=" font-size: 25px; width: 126px; margin-top: -30px;" class="btn btn-outline-light">Back</a>
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-outline-danger" style=" font-size: 25px; width: 126px; margin-top: -30px;" />
            </form>
        </div>

    </div>
    </div>
