@model EShopApp.Domain.Wine

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="eden">
    <div class="container">
        <h1 style="text-align: center; color:white"><i>Додадете ново вино</i></h1>
        <br />
        <div class="row" style="color:white; text-align:center">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Vinarija" class="control-label"></label>
                        <input asp-for="Vinarija" class="form-control" />
                        <span asp-validation-for="Vinarija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Zemja" class="control-label"></label>
                        <input asp-for="Zemja" class="form-control" />
                        <span asp-validation-for="Zemja" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Godina" class="control-label"></label>
                        <input asp-for="Godina" class="form-control" />
                        <span asp-validation-for="Godina" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kategorija" class="control-label"></label>
                        <input asp-for="Kategorija" class="form-control" />
                        <span asp-validation-for="Kategorija" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
